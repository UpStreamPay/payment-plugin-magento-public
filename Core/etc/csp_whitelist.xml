<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="upstream-pay-widget-script" type="host">https://widget.upstreampay.com</value>
                <value id="upstream-pay-api-preprod" type="host">https://api.preprod.upstreampay.com</value>
                <value id="upstream-pay-api-prod" type="host">https://api.upstreampay.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="upstream-pay-widget-connect" type="host">https://widget.upstreampay.com</value>
                <value id="upstream-pay-api-preprod-connect" type="host">https://api.preprod.upstreampay.com</value>
                <value id="upstream-pay-api-prod-connect" type="host">https://api.upstreampay.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="upstream-pay-widget-img" type="host">https://widget.upstreampay.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
